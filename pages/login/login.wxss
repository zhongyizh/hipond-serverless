/* pages/login/login.wxss */
page {
	background: #F8F8F8;
}

.header {
	align-items: flex-end;
	display: flex;
	margin-top: 50rpx;
	margin-bottom: 16rpx;
	width: 100%;
}

.header-image {
	height: 250rpx;
	width: 250rpx;
	background-color: #ffffff00;
	border: none;
}

.header-image::after {
	border: none;
}

.sub-header {
	margin-top: 4%;
	margin-left: 6%;
	color: var(--Grey-07, #041B15);
	font-size: 13px;
	font-weight: 400;
	letter-spacing: 1.3px;
	display: block;

}

.avatar {
	margin-top: 25rpx;
	border-radius: 500rpx;
	height: 200rpx;
	width: 200rpx;
}


.box-container {

	background-color: #ffffff;
	border-radius: 20rpx;
	margin-top: 2%;
	margin-left: 2%;
	margin-right: 2%;
	padding-top: 3%;
	padding-bottom: 3%;
}

.info {
	margin-left: 4%;
	margin-right: 4%;
	display: flex;
	align-items: center;
}

.info-title {
	color: #575757;
	font-weight: 400;
	font-size: 13px;
	width: 180rpx;
}

.info-text {
	color: #979797;
	font-weight: 400;
	letter-spacing: 1.3rpx;
	font-size: 11px;
	height: 23.4px;
	flex: 1;
}

.info-line {
	border-bottom: 1px solid #DBDBDB;
	margin-bottom: 3%;
	margin-left: 4%;
	margin-right: 4%;
}


.commit {
	align-items: center;
	justify-content: center;
	background: #85E4DC;
	border-radius: 500rpx !important;
	color: #fff;
	display: flex;
	font-size: 28rpx;
	font-weight: 700;
	height: 75rpx;
	width: 50%;
	position: fixed;
	left: 25%;
	bottom: 10%;
	text-indent: 38rpx;
	letter-spacing: 38rpx;
}

.commit::after {
	border: none;
}