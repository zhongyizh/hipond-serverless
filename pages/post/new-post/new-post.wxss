/* pages/post/new-post/new-post.wxss */
.new-post-page-container {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: stretch;
	padding: 0rpx 8rpx 0rpx 8rpx;
}

/* .upload-wrapper {
