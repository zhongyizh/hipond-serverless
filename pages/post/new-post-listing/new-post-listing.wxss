/* pages/post/new-post-listing/new-post-listing.wxss */

.long-content {
  font-size: 28rpx;
  color: #353535;
}

.content-container .item {
  margin-top: 10px; 
  text-align: center
}

.bold {
  font-weight: bold;
}

.new-listing-page-container {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: stretch;
	padding: 0rpx 8rpx 0rpx 8rpx;
}

.upload-wrapper {
	padding-top: 25rpx;
	padding-left: 25rpx;
	width: 300%;
}

.upload-component {
	--td-upload-add-bg-color: #EEF7F6;
	--td-upload-add-color: #A4C5C2;
	--td-upload-add-icon-font-size: 42px;
	--td-upload-radius: 25rpx;
}

.form-title-container {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	margin-right: 4%;
	margin-left: 4%;
  align-items: center;
}

.title-input-wrapper {
	width: 62%;
	border-bottom: 1rpx solid #EEEEEE;
}

.title-input {
	padding-left: 16rpx;
	margin-top: 30rpx;
}

.money-input-wrapper {
	display: flex;
	flex-direction: row;
  width: 18%;
  margin-top: 5%;
	background: #EEF7F6;
  border-radius: 10rpx;
  height: 56rpx;
}

.money-sign {
  margin-left: 24rpx;
  margin-top: 5rpx;
}

.money-input {
	margin-left: 10rpx;
  font-size: 26rpx;
  color: #A4C5C2;
  margin-top: 5rpx;
}

.listing-options-container {
	display: flex;
  flex-direction: row;
  margin: 3rpx 4% 55rpx 4%;
  height: 40rpx;
  margin-top: 25rpx;
}

.condition-dropdown, .expiration-dropdown {
  height: 60rpx;
  width: 100%;
  border: 1px solid #00B1A2;
  background: rgba(238, 247, 246, 1);
  border-radius: 30rpx;
}

.dropdown-label {
  width: 100%;
  height: 100%;
  color: rgba(89, 149, 150, 1);
  font-size: 26rpx;
  font-weight: 400;
  line-height: 60rpx;
  text-align: center;
}

.deliver-method-contaienr{
	display: flex;
  flex-direction: row;
  justify-content: space-between;
	margin-top: 8rpx;
	margin-right: 4%;
	margin-left: 4%;
	height: 96rpx;
}

.original-price-contaienr {
	display: flex;
  flex-direction: row;
  justify-content: space-between;
	margin-top: -40rpx;
	margin-right: 4%;
	margin-left: 4%;
  height: 96rpx;
  align-items: center;
}

checkbox .wx-checkbox-input {
	width: 28rpx;
	height: 28rpx;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #85E4DC;
  border-color:#85E4DC;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;  
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.body-text-container{
	display: flex;
	flex-direction: column;
	margin-right: 4%;
	margin-left: 4%;
	height: 500rpx;
  border-top: 1px solid #BBDAD7;
  border-bottom: 1px solid #BBDAD7;
	padding: 8rpx;
}

.body-text-textarea {
  padding-top: 10rpx;
  height: 500rpx;
  --td-textarea-text-color: #416D6E;
  font-size: 26rpx;
}

.location-container {
    display: flex;
    justify-content: space-between; 
    align-items: flex-start; 
    width: 100%;
}

.location-text-wrapper {
    display: flex;
    align-items: center; 
    margin: 4% 0 0 4%;
    width: 70%; 
    overflow: hidden; 
}

.location-icon {
    margin-right: 10rpx; 
    width: 22.5rpx;
    height: 28.64rpx;
}

.location-text {
    font-size: 22rpx;
    color: #A4C5C2;
    font-weight: 400;
    white-space: nowrap; 
    overflow: hidden;
    text-overflow: ellipsis; 
    max-width: calc(100% - 40rpx); 
}

.location-button {
    margin: 24rpx 4% 0 0; 
    height: 42rpx;
    width: 145rpx; 
    padding: 7rpx;
    font-size: 22rpx;
    font-weight: 400;
    color: #A4C5C2 !important;
    border: 1px solid #DAECEB !important;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.submit-button {
	border-radius: 50rpx;
	background-color: #85e4dc;	
	color: white;
	margin-top: 160rpx;
	font-size: 38rpx;
	font-weight: 700;
	width: 42%;
}