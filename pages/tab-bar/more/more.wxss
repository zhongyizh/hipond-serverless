/* pages/tab-bar/more/more.wxss */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.name-text {
	margin-top: 50rpx;
	color: #000;
	text-align: center;
	font-family: Arial;
	font-size: 16px;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}

.version-info {
	margin-top: 42rpx;
	color: var(--Grey-04, #9CA0A0);
	text-align: center;
	font-family: Arial;
	font-size: 16px;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
	margin-bottom: 80rpx;
}

.line-container {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	margin-bottom: 60rpx;
}

.left-text {
	color: #000;
	text-align: center;
	font-family: Arial;
	font-size: 16px;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
	letter-spacing: 4rpx;
	margin-left: 4%;
}

.right-container {
	display: flex;
	align-items: center;
	margin-right: 4%;
	gap: 8rpx; 
}

.right-text {
	color: var(--Grey-04, #9CA0A0);
	text-align: center;
	font-family: Arial;
	font-size: 16px;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}