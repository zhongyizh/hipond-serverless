/* custom-tab-bar/index.wxss */
.tab-bar {
	height: 55px;
	backdrop-filter: blur(10px);
	background: white;
	bottom: 0;
	filter: drop-shadow(0 -2px 10px rgba(0,0,0,.06));
	left: 0;
	padding-bottom: env(safe-area-inset-bottom);
	position: absolute;
	right: 0;
	z-index: 9999;
}

.tab-bar,.tab-bar-item {
	display: flex;
}

.tab-bar-item {
	align-items: center;
	flex: 1;
	flex-direction: column;
	justify-content: center;
	position: relative;
	padding-top: 2px;
}

.tab-bar-item-center {
	height: 132rpx;
	position: relative;
	width: 132rpx;
}

.tab-bar-item-image {
	height: 40rpx;
	width: 40rpx;
	position: relative;   
}

.tab-bar-item-view {
	margin-top: 2px;
	font-size: 24rpx;
	line-height: 36rpx;
}

.tab-bar-public {
	height: 55px;
	position: absolute;
	width: 100%;
}

.tab-bar-public,.tab-bar-public-background {
	align-items: center;
	border-radius: 50%;
	margin-bottom: 15rpx;
	display: flex;
	justify-content: center;
	margin-top: 6rpx;
}

.tab-bar-public-background {
	background-color: #85E4DC;
	box-shadow: 0 4px 12px rgba(51,51,51,.12);
	height: 80rpx;
	width: 80rpx;
}

.tab-bar-public-icon {
	height: 28rpx;
	width: 28rpx;
}